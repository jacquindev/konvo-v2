{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "target": "es2023",
    "module": "esnext",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "noEmit": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force"
  },
  "include": [
    "src",
    "vite.config.ts", 
    "vite-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
